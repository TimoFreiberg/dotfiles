[include]
  path=~/.gitcredentials 
  #user and credential block
[push]
	default = simple
[diff]
	tool = vimdiff
	guitool = meld
[core]
	editor = vim
	autocrlf = input
[merge]
	tool = meld
[alias]
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	s = status -s
	ss = status
	a = add
	ai = add -i
	ps = push
	pl = pull
	f = fetch
	c = commit -v
  ca = commit -a -v
	dt = difftool
	dtg = difftool -g
	b = branch
	co = checkout
	cb = checkout -b
	d = diff --stat
	dd = diff
  st = stash
  re = remote
[branch]
	autosetuprebase = always
[pager]
	log = diffr | less -R
	show = diffr | less -R
	diff = diffr | less -R
